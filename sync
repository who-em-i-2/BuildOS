#!/bin/bash

mkdir -p /tmp/rom # Where to sync source
cd /tmp/rom

# wait for function script to clone
while true; do
    if [ -f "/tmp/ci/function" ]; then
        . /tmp/ci/function
        break
    else
        sleep 1
    fi
done

SECONDS=0

if [[ $git_cookies != 0 ]]; then

sudo touch /etc/mtab
sudo chmod 777 /etc/mtab

echo "$git_cookies" > ~/git_cookies.sh
bash ~/git_cookies.sh

fi

git config --global user.name "ImSpiDy"
echo "switching account" 
gh config set -h github.com
login_main # main id
git config --global credential.helper '!gh auth git-credential'

# Sync source
repo init --depth=1 --no-repo-verify -u https://github.com/ImSpiDy/android_manifest -b nad -g default,-mips,-darwin,-notdefault

# Sync source without unnecessary messages, try with -j30 first, if fails, it will try again
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j15 || repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j10

# tree
git clone https://github.com/ImSpiDy/device_xiaomi_lavender device/xiaomi/lavender -b 10-4.19
git clone https://github.com/ImSpiDy/device_xiaomi_sdm660-common device/xiaomi/sdm660-common -b 10-4.19
git clone --depth=1 https://github.com/ImSpiDy/vendor_lavender vendor/xiaomi/lavender -b 10-4.19
git clone --depth=1 https://github.com/ImSpiDy/vendor_xiaomi_sdm660-common vendor/xiaomi/sdm660-common -b 10-4.19
#git clone --depth=1 https://github.com/ImSpiDy/sonix_kernel_sdm660 kernel/xiaomi/lavender -b snx-qpnp

git clone https://github.com/ImSpiDy/sonix_kernel_sdm660 kernel/xiaomi/sdm660 -b legacy
git -C kernel/xiaomi/sdm660 revert --no-edit 82c22783962ef202b2a6df7f09d47616f6f45c07
git -C kernel/xiaomi/sdm660 revert --no-edit edf92cc79b545136824f212490108846b27af5fc
sed -i '/CONFIG_INITRAMFS_IGNORE_SKIP_FLAG=/s/.*/CONFIG_INITRAMFS_IGNORE_SKIP_FLAG=n/' kernel/xiaomi/sdm660/arch/arm64/configs/lavender_defconfig
git -C kernel/xiaomi/sdm660 apply drop_rdp.p

# extra
git clone --depth=1 https://gitlab.com/Project-Nexus/nexus-clang.git prebuilts/clang/host/linux-x86/custom-clang -b nexus-14

git clone https://github.com/Nub-XD/vendor_lavender-priv_keys vendor/lineage-priv/keys

rm -rf vendor/lawnchair

git config --global user.name "$CIRRUS_REPO_OWNER"
echo "switching account" && gh auth logout
login_main # main id
gh config set -h github.com

. /tmp/ci/function
tg "$rom_name source sync completed!
Total Size: $(du -sh /tmp/rom | cut -d - -f 1 | cut -d / -f 1)
Time Took: $(($SECONDS / 60)) minute(s) and $(($SECONDS % 60)) second(s).
Status: $progress"

echo "$(($SECONDS / 60))" > /tmp/sync_time.txt
