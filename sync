#!/bin/bash

mkdir -p /tmp/rom # Where to sync source
cd /tmp/rom

# wait for function script to clone
while true; do
    if [ -f "/tmp/ci/function" ]; then
        . /tmp/ci/function
        break
    else
        sleep 1
    fi
done

SECONDS=0

if [[ $git_cookies != 0 ]]; then

sudo touch /etc/mtab
sudo chmod 777 /etc/mtab

echo "$git_cookies" > ~/git_cookies.sh
bash ~/git_cookies.sh

fi

git config --global user.name "ImSpiDy"
echo "switching account" 
gh config set -h github.com
login_main # main id
git config --global credential.helper '!gh auth git-credential'

# Sync source
repo init --depth=1 --no-repo-verify -u https://github.com/ImSpiDy/android_manifest -b rdc -g default,-mips,-darwin,-notdefault

# Sync source without unnecessary messages, try with -j30 first, if fails, it will try again
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j15 || repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j10

rm -rf vendor/codeaurora/commonsys/packages/apps/SoundRecorder/Android.bp \
        vendor/nxp/opensource/halimpl/utils/Android.bp \
        vendor/nxp/opensource/halimpl/src/Android.bp \
        vendor/nxp/opensource/hidlimpl/Android.bp \
        vendor/nxp/opensource/hidlimpl/1.*/Android.bp

#git clone --depth=1 https://github.com/ThankYouMario/proprietary_vendor_qcom_common vendor/qcom/common -b quartz

rm -rf hardware/qcom/display vendor/qcom/opensource/audio-hal/primary-hal hardware/qcom/media
git clone --depth=1 https://github.com/AOSPA/android_hardware_qcom_display hardware/qcom/display -b quartz-8998
git clone --depth=1 https://github.com/AOSPA/android_hardware_qcom_audio vendor/qcom/opensource/audio-hal/primary-hal -b quartz-8998
git clone --depth=1 https://github.com/AOSPA/android_hardware_qcom_media hardware/qcom/media -b quartz-8998

git clone --depth=1 https://gitlab.com/Project-Nexus/nexus-clang.git prebuilts/clang/host/linux-x86/custom-clang -b nexus-14
rm -rf vendor/lineage-priv/keys; git clone --depth=1 https://github.com/Nub-XD/vendor_lavender-priv_keys vendor/lineage-priv/keys

# tree
#rm -rf device/xiaomi/lavender; git clone https://github.com/ImSpiDy/device_xiaomi_lavender device/xiaomi/lavender -b 10-CLO
#rm -rf device/xiaomi/sdm660-common; git clone https://github.com/ImSpiDy/device_xiaomi_sdm660-common device/xiaomi/sdm660-common -b 10
#rm -rf vendor/xiaomi/lavender; git clone --depth=1 https://github.com/ImSpiDy/vendor_lavender vendor/xiaomi/lavender -b 10
#rm -rf vendor/xiaomi/sdm660-common; git clone --depth=1 https://github.com/ImSpiDy/vendor_xiaomi_sdm660-common vendor/xiaomi/sdm660-common -b 10
rm -rf kernel/xiaomi/lavender; git clone --depth=1 https://github.com/ImSpiDy/kernel_xiaomi_lavender-4.4 kernel/xiaomi/lavender -b snx

rm -rf device/xiaomi/lavender; git clone --depth=1 https://github.com/ImSpiDy/device_xiaomi_lavender-4.4 device/xiaomi/lavender -b 10
rm -rf vendor/xiaomi/lavender; git clone --depth=1 https://github.com/ImSpiDy/vendor_xiaomi_lavender-4.4 vendor/xiaomi/lavender -b 10

#rm -rf external/wpa_supplicant_8; git clone https://github.com/NusantaraProject-ROM/android_external_wpa_supplicant_8 external/wpa_supplicant_8 -b 10

# tree
rm -rf vendor/lawnchair

cd build/soong
curl https://github.com/AOSPA/android_build_soong/commit/836f9c45d042e3d197b505a08e52b8107bdf88b0.patch | git am
cd -

git config --global user.name "$CIRRUS_REPO_OWNER"
echo "switching account" && gh auth logout
login_main # main id
gh config set -h github.com

. /tmp/ci/function
tg "$rom_name source sync completed!
Total Size: $(du -sh /tmp/rom | cut -d - -f 1 | cut -d / -f 1)
Time Took: $(($SECONDS / 60)) minute(s) and $(($SECONDS % 60)) second(s).
Status: $progress"

echo "$(($SECONDS / 60))" > /tmp/sync_time.txt
