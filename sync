#!/bin/bash

mkdir -p /tmp/rom # Where to sync source
cd /tmp/rom

SECONDS=0

if [[ $git_cookies != 0 ]]; then

sudo touch /etc/mtab
sudo chmod 777 /etc/mtab

echo "$git_cookies" > ~/git_cookies.sh
bash ~/git_cookies.sh

fi

# Sync source
repo init --depth=1 --no-repo-verify -u https://github.com/ReloadedOS/manifest -b t -g default,-mips,-darwin,-notdefault
#git clone https://github.com/wHo-EM-i/manifest.git --depth 1 -b topaz .repo/local_manifests

# Sync source without unnecessary messages, try with -j16 first, if fails, it will try again
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j16 || repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j10

# tree
git clone --depth=1 https://ImSpiDy:$my_og_token@github.com/ImSpiDy/device_xiaomi_lavender device/xiaomi/lavender -b T-CLO
git clone --depth=1 https://github.com/wHo-EM-i/android_vendor_xiaomi_lavender vendor/xiaomi/lavender -b T-CLO-test
git clone --depth=1 https://github.com/ImSpiDy/kernel_xiaomi_lavender-4.4 kernel/xiaomi/lavender -b topaz-camfix

rm -rf /tmp/rom/vendor/qcom/opensource/usb /tmp/rom/vendor/qcom/opensource/commonsys-intf/wfd /tmp/rom/device/qcom/sepolicy-legacy-um

git clone --depth=1 https://github.com/wHo-EM-i/device_qcom_sepolicy-legacy-um-1 /tmp/rom/device/qcom/sepolicy-legacy-um -b sushi

#hals
rm -rf hardware/qcom/msm8998/audio hardware/qcom/msm8998/media hardware/qcom/msm8999/display hardware/qcom/wlan external/wpa_supplicant_8 vendor/qcom/opensource/data-ipa-cfg-mgr
git clone --depth=1 https://github.com/Nub-XD/android_hardware_qcom_audio hardware/qcom/msm8998/audio -b 12-sapphire
git clone --depth=1 https://github.com/Nub-XD/android_hardware_qcom_display hardware/qcom/msm8998/display -b 12-sapphire
git clone --depth=1 https://github.com/Nub-XD/android_hardware_qcom_media hardware/qcom/msm8998/media -b 12-sapphire
git clone --depth=1 https://github.com/AOSPA/android_hardware_qcom_wlan hardware/qcom/wlan -b topaz
git clone --depth=1 https://github.com/aospa-mido/android_external_wpa_supplicant_8 external/wpa_supplicant_8 -b topaz
git clone --depth=1 https://github.com/AOSPA/android_vendor_qcom_opensource_data-ipa-cfg-mgr vendor/qcom/opensource/data-ipa-cfg-mgr -b topaz

#test
#echo "KERNEL_CUSTOM_LLVM := true" >> device/xiaomi/lavender/B*.mk

# powerhint
rm -rf /tmp/rom/vendor/qcom/opensource/power
git clone --depth=1 https://github.com/Nub-XD/vendor_qcom_opensource_power /tmp/rom/vendor/qcom/opensource/power -b t

# patch
#cd /tmp/rom/hardware/qcom/display && curl https://github.com/wHo-EM-i/android_hardware_qcom_display/commit/bbbf547753f8b7f88e86efe13cefbdce7c72c5fc.patch | git am
#cd /tmp/rom/vendor/qcom/opensource/commonsys-intf/display && curl https://github.com/wHo-EM-i/vendor-qcom-opensource-display-commonsys-intf/commit/1ebc3b7c336ad5e7c11ca9ce1130032aa3928151.patch | git am
#cd /tmp/rom/vendor/qcom/opensource/commonsys/display && curl https://github.com/wHo-EM-i/vendor-qcom-opensource-display-commonsys/commit/1265649c6373b750b394bd91a8a91ebb9c03bb45.patch | git am
rm -rf /tmp/rom/vendor/qcom/opensource/commonsys/display/libqdmetadata
#cd /tmp/rom/vendor/aospa && curl https://github.com/AOSPA/android_vendor_aospa/commit/15c966c916008187227054b024fbfe63e287483b.patch | git am
#cd /tmp/rom/bionic && curl https://github.com/wHo-EM-i/bionic/commit/61ea0bc221c8ae7992b44c58302e23ab3e748742.patch | git am
#cd /tmp/rom/system/libhidl && curl https://github.com/ArrowOS/android_system_libhidl/commit/fbdf10a33f546d202ae12b4b864177fea9faa998.patch | git am
cd /tmp/rom/device/qcom/common && sed -i 's|include device/qcom/sepolicy-legacy/SEPolicy.mk|-include device/qcom/sepolicy-legacy/SEPolicy.mk|' B*Qcom.mk
#cd /tmp/rom/kernel/xiaomi/lavender && git fetch https://github.com/projects-nexus/android_xtreme_kernel_lavender -t topaz
#git cherry-pick b1f2b0c7b5ecfb733c042a7b21d852807e40956e^..e6e8510bea413213412e077b1016df9d0980de6e
#git cherry-pick 29f9a3fb5442aadbb5417c18966722c594d6d910
cp -vf /tmp/rom/device/xiaomi/lavender/configs/perf/*.xml /tmp/rom/device/qcom/common/vendor/perf/configs/sdm660/perf

. /tmp/ci/function
tg "$rom_name source sync completed!
Total Size: $(du -sh /tmp/rom | cut -d - -f 1 | cut -d / -f 1)
Time Took: $(($SECONDS / 60)) minute(s) and $(($SECONDS % 60)) second(s).
Status: $progress"

echo "$(($SECONDS / 60))" > /tmp/sync_time.txt
