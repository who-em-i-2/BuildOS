#!/bin/bash

mkdir -p /tmp/rom # Where to sync source
cd /tmp/rom

# wait for function script to clone
while true; do
    if [ -f "/tmp/ci/function" ]; then
        . /tmp/ci/function
        break
    else
        sleep 1
    fi
done

SECONDS=0

if [[ $git_cookies != 0 ]]; then

sudo touch /etc/mtab
sudo chmod 777 /etc/mtab

echo "$git_cookies" > ~/git_cookies.sh
bash ~/git_cookies.sh

fi

git config --global user.name "ImSpiDy"
echo "switching account" 
gh config set -h github.com
login_main # main id
git config --global credential.helper '!gh auth git-credential'

# Sync source
repo init --depth=1 --no-repo-verify -u https://github.com/VoltageOS-staging/manifest.git -b 15 --git-lfs -g default,-mips,-darwin,-notdefault

# Sync source without unnecessary messages, try with -j30 first, if fails, it will try again
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j16 || repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j8

# missed bringup
curl https://github.com/VoltageOS/hardware_google_pixel/commit/5723b06faf36c6a2c7c27a35ac43e30e51d8eb23.patch | git -C hardware/google/pixel am

# tree

if [ $K19 == 1 ]; then
git clone --single-branch https://github.com/ImSpiDy/sonix_kernel_sdm660 kernel/xiaomi/sdm660 && git -C kernel/xiaomi/sdm660 revert --no-edit 4cbc441be5366fdc5e7cc09c989df617c9c162d0
else
git clone --depth=1 https://github.com/ImSpiDy/kernel_xiaomi_lavender-4.4 kernel/xiaomi/sdm660 -b snx-qti
git clone --depth=1 https://github.com/wHo-EM-i/vendor_xiaomi_sdm660-common-4.4 vendor/xiaomi/sdm660-common-4.4 -b 14
fi
git clone https://github.com/ImSpiDy/device_xiaomi_lavender device/xiaomi/lavender -b 15-vos
git clone --depth=1 https://github.com/ImSpiDy/device_xiaomi_sdm660-common device/xiaomi/sdm660-common -b 15

git clone --depth=1 https://github.com/ImSpiDy/vendor_lavender vendor/xiaomi/lavender -b 15
git clone --depth=1 https://github.com/ImSpiDy/vendor_xiaomi_sdm660-common vendor/xiaomi/sdm660-common -b 15

rm -rf hardware/xiaomi
#git clone --depth=1 https://github.com/arrowos-devices/android_hardware_xiaomi hardware/xiaomi -b arrow-13.1

#rm -rf device/qcom/sepolicy-legacy-um
#git clone --depth=1 https://github.com/ArrowOS/android_device_qcom_sepolicy-legacy-um device/qcom/sepolicy-legacy-um -b arrow-13.1

#rm -rf device/xiaomi/lavender/libhidl
#rm -rf hardware/xiaomi/megvii/*.bp

# patch
#rm -rf /tmp/rom/bionic
#git clone --depth=1 https://github.com/wHo-EM-i/bionic -b vos13

# clang 17
#git clone --depth=1 https://gitlab.com/crdroidandroid/android_prebuilts_clang_host_linux-x86_clang-r498229 prebuilts/clang/host/linux-x86/aosp-clang

# Hals
if [ $K19 == 1 ]; then
sed -i 's|QCOM_HARDWARE_VARIANT := msm8998|QCOM_HARDWARE_VARIANT := sdm660|' hardware/qcom-caf/common/*Qcom.mk
rm -rf hardware/qcom-caf/sdm660
git clone --depth=1 https://github.com/wHo-EM-i/android_hardware_qcom_audio hardware/qcom-caf/sdm660/audio -b 15-caf-sdm660
git clone --depth=1 https://github.com/wHo-EM-i/hardware_qcom_display hardware/qcom-caf/sdm660/display -b 15-9.2.r1
git clone --depth=1 https://github.com/wHo-EM-i/android_hardware_qcom_media hardware/qcom-caf/sdm660/media -b 15-caf-sdm660
git clone --depth=1 https://github.com/wHo-EM-i/android_hardware_qcom_camera hardware/qcom-caf/sdm660/camera -b sdm660-12.2.1.r1
else
sed -i 's|QCOM_HARDWARE_VARIANT := sdm660|QCOM_HARDWARE_VARIANT := msm8998|' hardware/qcom-caf/common/*Qcom.mk
rm -rf hardware/qcom-caf/msm8998
git clone --depth=1 https://github.com/wHo-EM-i/android_hardware_qcom_audio hardware/qcom-caf/msm8998/audio -b 8998-4.4
git clone --depth=1 https://github.com/wHo-EM-i/hardware_qcom_display hardware/qcom-caf/msm8998/display -b 15-9.2.r1
git clone --depth=1 https://github.com/wHo-EM-i/android_hardware_qcom_media hardware/qcom-caf/msm8998/media -b 8998-4.4
git clone --depth=1 https://github.com/wHo-EM-i/android_hardware_qcom_camera hardware/qcom-caf/msm8998/camera -b sdm660-12.2.1.r1
fi

#git clone --depth=1 https://github.com/pix106/android_hardware_qcom-caf_camera hardware/qcom-caf/sdm660/camera -b sdm660-4.19-11.2.1.r1-lavender

# build patch
curl https://github.com/wHo-EM-i/build/commit/6253c20096ef05550a25782fe2156317c5fbc691.patch | git -C build/make am
curl https://github.com/Los-Ext/android_build/commit/978f7eab187c0ea19e6fc541eea787dcc37852a0.patch | git -C build/make am

# build_soong patch
curl https://github.com/wHo-EM-i/build_soong/commit/30699fd9bf48ec4d3107507c27c3a12cb1e69f40.patch | git -C build/soong am
curl https://github.com/wHo-EM-i/build_soong/commit/50dd2b5da22c8fc0f52d0373cca03f1635190612.patch | git -C build/soong am
#curl https://github.com/wHo-EM-i/build_soong/commit/00e17b67081c0f2f3558f6fd33e034fd504b209b.patch | git -C build/soong am
curl https://github.com/wHo-EM-i/build_soong/commit/56fdbc1cf940dbd37bbb6eae51b61acd888ecfd3.patch | git -C build/soong am
curl https://github.com/wHo-EM-i/build_soong/commit/77af04630dad56b85d55f49c5cdd69a0aff7e6b0.patch | git -C build/soong am

# keys
rm -rf vendor/lineage-priv/keys vendor/voltage-priv/keys
git clone --depth=1 https://github.com/Los-Ext/vendor_lineage-priv_keys vendor/lineage-priv/keys
#git clone https://github.com/Nub-XD/vendor_lavender-priv_keys vendor/lineage-priv/keys
echo "-include vendor/lineage-priv/keys/keys.mk" >> vendor/*/config/common.mk

git config --global user.name "$CIRRUS_REPO_OWNER"
echo "switching account" && gh auth logout
login_main # main id
gh config set -h github.com

. /tmp/ci/function
tg "$rom_name source sync completed!
Total Size: $(du -sh /tmp/rom | cut -d - -f 1 | cut -d / -f 1)
Time Took: $(($SECONDS / 60)) minute(s) and $(($SECONDS % 60)) second(s).
Status: $progress"

echo "$(($SECONDS / 60))" > /tmp/sync_time.txt

neofetch
